function [ X, Y ] = train_svm(imageset, class, vocab_size, centers, descr_type)

    [X, Y] = get_features_and_labels(imageset, class, vocab_size, centers, descr_type);
%     model = fitcsvm(X,Y);
    model = train(Y, sparse(X));
    [l_a, accuracy_a, d_p_a] = predict(Y_a, test_data, model_airplanes_train);
    filename = strcat('objects/model_', char(class), '_', num2str(vocab_size), '_', descr_type);
    save(filename, 'model');
    
end

