function [ f , d ] = descriptors( I, type)
binSize = 8 ;
magnif = 3 ;
I = im2single(I);
if strcomp(type,'dense')
    if size(I,3) >1
        I = rgb2gray(I);
    end
    Is = vl_imsmooth(I, sqrt((binSize/magnif)^2 - .25)) ;
    [f, d] = vl_dsift(Is, 'size', binSize) ;
    f(3,:) = binSize/magnif ;
    f(4,:) = 0 ;
    
    
    
end

if strcomp(type,'normal')
    [f,d] = descriptors(I,'dense');
    [f_, d_] = vl_sift(I, 'frames', f);
    f = f_;
    d= d_;
end


if strcomp(type,'rgbSIFT')
    [f,d] = vl_phow(I,'color','rgb');
end


if strcomp(type,'opponent')
    [f,d] = vl_phow(I,'color','opponent');
end


if strcomp(type,'RGBSIFT')
    
end







end

